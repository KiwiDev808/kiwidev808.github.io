import { siteConfig } from '@/site-config'
import { getAllPosts, sortMDByDate } from '@/utils'

const skills = {
	languages: ['lorem', 'ipsum'],
	frontend: ['lorem', 'ipsum', 'lorem', 'ipsum', 'lorem', 'ipsum', 'lorem'],
	backend: ['lorem', 'ipsum', 'lorem', 'ipsum'],
	others: ['lorem', 'ipsum', 'lorem', 'ipsum', 'lorem']
}

const experiences = [
	{
		title: 'Software Engineer II',
		company: 'Grupo Boticário, Brazil',
		period: 'Sep 2024 - Present',
		attributions: [
			'Designed and implemented comprehensive New Relic dashboards and alerts for critical business metrics, enabling real-time monitoring and proactive issue resolution.',
			'Developed a custom telemetry system to track and analyze stock discrepancies between interconnected systems, ensuring inventory accuracy and reducing operational losses.',
			'Successfully optimized critical API endpoint performance through advanced query optimization, achieving an 80% reduction in response time and significantly improving system efficiency.'
		]
	},
	{
